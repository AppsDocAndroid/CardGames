<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/createGameHeader"
            android:id="@+id/createGameHeader"
            android:layout_margin="@dimen/createGameHeaderMargin"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="@dimen/createGameHeaderTextSize"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/createGameMargin"
            android:layout_marginTop="@dimen/createGameMargin"
            android:layout_marginRight="@dimen/createGameMargin">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gameTypeLabel"
                android:id="@+id/gameTypeTextView"
                android:layout_gravity="bottom|left"
                android:spinnerMode="dropdown"
                android:textSize="@dimen/createGameTextSize"/>

        <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gameTypeSpinner"
                android:spinnerMode="dropdown"
                android:layout_gravity="bottom"/>

    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gameFriendsLabel"
            android:id="@+id/gameFriendsTextView"
            android:layout_gravity="bottom|left"
            android:spinnerMode="dropdown"
            android:textSize="@dimen/createGameTextSize"
            android:layout_marginLeft="@dimen/createGameMargin"
            android:layout_marginTop="@dimen/createGameMargin"
            android:layout_marginRight="@dimen/createGameMargin"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/gameFriendsLayout"
            android:layout_marginLeft="@dimen/createGameMargin"
            android:layout_marginTop="@dimen/createGameMargin"
            android:layout_marginRight="@dimen/createGameMargin">
    </LinearLayout>


</LinearLayout>